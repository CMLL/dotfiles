# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c /home/cllamach/.i3blocks.conf
        strip_workspace_numbers yes
        font pango: Hack 10.5
        colors {
            background $bg-color
            focused_workspace $active-bg-color $active-bg-color $active-text-color
            inactive_workspace $inactive-bg-color $inactive-bg-color:w $inactive-text-color
        }
        # tray_output no
        position bottom
}

