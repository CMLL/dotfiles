{
    // Editor visual
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "off",
    "editor.glyphMargin": true,
    "editor.fontFamily": "DejaVu Sans Code",
    "editor.fontLigatures": true,
    "python.analysis.logLevel": "Trace",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.maxNumberOfProblems": 100,
    "python.linting.pylamaEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.mypyEnabled": false,
    "python.formatting.provider": "autopep8",

    // Git
    "git.autofetch": true,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.currentLine.enabled": false,

    // Python autocompletion
    "python.venvPath": "~/.virtualenvs",
    "python.analysis.openFilesOnly": true,
    "python.autoUpdateLanguageServer": true,
    "python.pythonPath": "/home/cllamach/.virtualenvs/panopta_env/bin/python",
    "workbench.editor.openSideBySideDirection": "down",
    "python.autoComplete.showAdvancedMembers": true,
    "python.terminal.activateEnvironment": true,
    "breadcrumbs.filePath": "last",
    "breadcrumbs.symbolPath": "on",
    "python.autoComplete.extraPaths": [
        "/home/cllamach/Panopta/classic/src/"
    ],
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 100,
    "editor.suggestSelection": "first",
    "editor.suggestOnTriggerCharacters": true,
    "editor.snippetSuggestions": "top",
    "editor.renderWhitespace": "boundary",
    "editor.acceptSuggestionOnEnter": "smart",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.rulers": [80, 100, 120],

    // Excluded files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
    },
    "workbench.colorTheme": "Ayu Mirage",
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "block",
    "window.titleBarStyle": "custom",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "typescript.tsc.autoDetect": "off",
    "npm.autoDetect": "off",
    "editor.renderControlCharacters": false,
    "terminal.integrated.rendererType": "dom",
    "editor.wordBasedSuggestions": false,
    "window.zoomLevel": 0,
    "workbench.iconTheme": "vscode-icons",
    "gitlens.views.repositories.files.layout": "tree",
    "python.jediEnabled": false
}
